{
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item",
    "description": "Items inside an order (bike or accessory)"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "item_type": {
      "type": "enumeration",
      "enum": ["bike", "accessory"],
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product"
    },
    "accessory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::accessory.accessory"
    },
    "color_name": {
      "type": "string"
    },
    "color_hex": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "unit_price": {
      "type": "decimal",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "items"
    }
  }
}
