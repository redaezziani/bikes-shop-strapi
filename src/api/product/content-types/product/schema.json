{
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Bike product with specs, colors, accessories, and markdown details"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },

    "short_description": {
      "type": "text"
    },
    "long_description": {
      "type": "richtext"
    },

    "price": {
      "type": "decimal",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "preview_images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },

    "category": {
      "type": "enumeration",
      "enum": ["bike"],
      "default": "bike"
    },
    "specs": {
      "type": "component",
      "repeatable": false,
      "component": "product.specs"
    },
    "colors": {
      "type": "component",
      "repeatable": true,
      "component": "product.color-option"
    },
    "available_accessories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::accessory.accessory"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    }
  }
}
