{
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer order with Stripe payment tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "customer_name": {
      "type": "string",
      "required": true
    },
    "customer_email": {
      "type": "email",
      "required": true
    },
    "customer_phone": {
      "type": "string",
      "required": false
    },
    "customer_address": {
      "type": "text",
      "required": false
    },
    "customer_city": {
      "type": "string",
      "required": false
    },
    "customer_country": {
      "type": "string",
      "required": false
    },
    "note": {
      "type": "text",
      "required": false
    },
    "agreed_to_terms": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "usd"
    },
    "stripe_session_id": {
      "type": "string",
      "unique": true
    },
    "stripe_payment_intent": {
      "type": "string",
      "unique": true
    },
    "payment_status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed", "refunded", "shipped"],
      "default": "pending"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    }
  }
}
