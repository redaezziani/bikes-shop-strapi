{
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer order with Stripe payment tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "customer_name": {
      "type": "string",
      "required": true
    },
    "customer_email": {
      "type": "email",
      "required": true
    },
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "usd"
    },
    "stripe_session_id": {
      "type": "string",
      "unique": true
    },
    "stripe_payment_intent": {
      "type": "string",
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed", "shipped"],
      "default": "pending"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    }
  }
}
